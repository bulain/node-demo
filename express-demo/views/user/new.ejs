<% layout('../_layout') -%>

  <div class='row'>
    <h1><%=t('common.title.new')%><%=t('user.model')%></h1>
  </div>
  <form action='/user' method='post'>
    <div class='row'>
      <div><label for='name'><%=t('user.name')%></label></div>
      <div><input type='text' id='user.name' name='user[name]' value='<%=user.name%>'/></div>
    </div>
    <div class='row'>
      <div><label for='note'><%=t('user.note')%></label></div>
      <div><input type='text' id='user.note' name='user[note]' value='<%=user.note%>'/></div>
    </div>
    <div class='row'>
      <input type='hidden' name='_method' value='PUT'/>
      <a href='/user'><%=t('common.action.back')%></a>
      <button type='submit'><%=t('common.action.create')%></button>
    </div>
  </form>
